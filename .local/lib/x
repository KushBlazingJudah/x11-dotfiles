#!/bin/sh

# X11 library.

# Get a list of monitors.
monitors() {
	xrandr --listmonitors | tail -n +2 | while read -r line; do
		echo "${line##* }"
	done
}

# Turn off a monitor.
monioff() {
	xrandr --output "$1" --off
}

# Set the background image to $1.
setbg() {
	hsetroot -fill "$1"
}

# Set the Xft DPI
setdpi() {
	xrdb -merge <<EOF
Xft.dpi: 120

Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
EOF
}
