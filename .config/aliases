# vim: set ft=sh:

alias ls="ls --color=auto"
alias la="ls -la"

alias mv="mv -i"
alias rm="rm -i"

alias ip="ip --color=auto"

alias dg="git --git-dir=\"$HOME/.dotfiles\" --work-tree=\"$HOME\""

case "$EDITOR" in
	vim)
		alias nvim="vim"
		alias vi="vim"
		;;
	nvim)
		alias vim="nvim"
		alias vi="nvim"
		;;
esac

# git aliases
alias gA="git commit --amend"
alias ga="git add"
alias gC="git checkout"
alias gc="git commit"
alias gP="git push"
alias gp="git pull"
alias gr="git reset"
alias gs="git status"
